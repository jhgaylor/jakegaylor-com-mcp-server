{% macro assessment_card(title, description, example="") %}
<div class="border border-gray-200 dark:border-gray-700 rounded-md p-3 bg-white dark:bg-gray-900 shadow-md hover:shadow-lg transition-shadow duration-200">
    <h4 class="font-bold mb-2 text-gray-900 dark:text-gray-100">{{ title }}</h4>
    <p class="text-sm text-gray-800 dark:text-gray-200">{{ description | safe }}</p>
    {% if example %}
    <p class="text-xs mt-2 italic text-gray-700 dark:text-gray-300">Example: "{{ example }}"</p>
    {% endif %}
    {{ caller() if caller }}
</div>
{% endmacro %} 