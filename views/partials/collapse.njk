{% macro collapse(id, title) -%}
<details id="{{ id }}" class="bg-gray-50 dark:bg-gray-900 p-4 rounded-md my-4 border border-gray-200 dark:border-gray-800">
  <summary class="font-semibold cursor-pointer text-gray-900 dark:text-gray-100">{{ title | safe }}</summary>
  <div class="mt-4 text-gray-800 dark:text-gray-200">
    {{ caller() }}
  </div>
</details>
{%- endmacro %} 