{% macro feature_card(title, description, example="", has_margin_bottom=true) %}
<div class="feature-section">
    <h3 class="mt-6 text-gray-900 dark:text-gray-100">{{ title }}</h3>
    <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-md {% if has_margin_bottom %}mb-4{% endif %}">
        <p class="mb-3 text-gray-800 dark:text-gray-200">{{ description | safe }}</p>
        {% if example %}
        <p class="text-xs italic text-gray-700 dark:text-gray-300">Example: "{{ example }}"</p>
        {% endif %}
        {{ caller() if caller }}
    </div>
</div>
{% endmacro %} 