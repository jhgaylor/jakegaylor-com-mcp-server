<h4 class="mt-8">Resources</h4>
<div class="space-y-4">
    {% call comp.collapse("resource-resume-text", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">candidate-info://resume-text</code>: Resume content as text") %}
        <div class="whitespace-pre-line">{{ resumeText }}</div>
    {% endcall %}
    
    {% call comp.collapse("resource-resume-url", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">candidate-info://resume-url</code>: URL to the resume") %}
        <a href="{{ resumeUrl }}" class="text-blue-600 hover:underline break-all" target="_blank" rel="noopener">{{ resumeUrl }}</a>
    {% endcall %}
    
    {% call comp.collapse("resource-linkedin-url", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">candidate-info://linkedin-url</code>: LinkedIn profile URL") %}
        <a href="{{ linkedinUrl }}" class="text-blue-600 hover:underline break-all" target="_blank" rel="noopener">{{ linkedinUrl }}</a>
    {% endcall %}
    
    {% call comp.collapse("resource-github-url", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">candidate-info://github-url</code>: GitHub profile URL") %}
        <a href="{{ githubUrl }}" class="text-blue-600 hover:underline break-all" target="_blank" rel="noopener">{{ githubUrl }}</a>
    {% endcall %}
    
    {% call comp.collapse("resource-website-url", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">candidate-info://website-url</code>: Personal website URL") %}
        <a href="{{ websiteUrl }}" class="text-blue-600 hover:underline break-all" target="_blank" rel="noopener">{{ websiteUrl }}</a>
    {% endcall %}
    
    {% call comp.collapse("resource-website-text", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">candidate-info://website-text</code>: Content from the personal website") %}
        <div class="whitespace-pre-line">{{ websiteText }}</div>
    {% endcall %}
</div> 