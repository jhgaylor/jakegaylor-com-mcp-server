<h4 class="mt-8">Tools</h4>
<div class="space-y-4">
    {% call comp.collapse("tool-resume-text", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">get_resume_text</code>: Returns the candidate's resume content as text") %}
        <div class="whitespace-pre-line">{{ resumeText }}</div>
    {% endcall %}
    
    {% call comp.collapse("tool-resume-url", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">get_resume_url</code>: Returns the URL to the candidate's resume") %}
        <a href="{{ resumeUrl }}" class="text-blue-600 hover:underline break-all" target="_blank" rel="noopener">{{ resumeUrl }}</a>
    {% endcall %}
    
    {% call comp.collapse("tool-linkedin-url", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">get_linkedin_url</code>: Returns the candidate's LinkedIn profile URL") %}
        <a href="{{ linkedinUrl }}" class="text-blue-600 hover:underline break-all" target="_blank" rel="noopener">{{ linkedinUrl }}</a>
    {% endcall %}
    
    {% call comp.collapse("tool-github-url", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">get_github_url</code>: Returns the candidate's GitHub profile URL") %}
        <a href="{{ githubUrl }}" class="text-blue-600 hover:underline break-all" target="_blank" rel="noopener">{{ githubUrl }}</a>
    {% endcall %}
    
    {% call comp.collapse("tool-website-url", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">get_website_url</code>: Returns the candidate's personal website URL") %}
        <a href="{{ websiteUrl }}" class="text-blue-600 hover:underline break-all" target="_blank" rel="noopener">{{ websiteUrl }}</a>
    {% endcall %}
    
    {% call comp.collapse("tool-website-text", "<code class=\"bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 px-2 py-1 rounded\">get_website_text</code>: Returns the content from the candidate's personal website") %}
        <div class="whitespace-pre-line">{{ websiteText }}</div>
    {% endcall %}
</div> 